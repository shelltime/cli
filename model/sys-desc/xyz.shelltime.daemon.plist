<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>xyz.shelltime.daemon</string>
    <key>ProgramArguments</key>
    <array>
        <string>/bin/sh</string>
        <string>-c</string>
        <string>exec $SHELL -l -c '{{.BaseFolder}}/bin/shelltime-daemon'</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardErrorPath</key>
    <string>{{.BaseFolder}}/logs/shelltime-daemon.err</string>
    <key>StandardOutPath</key>
    <string>{{.BaseFolder}}/logs/shelltime-daemon.log</string>
    <key>EnvironmentVariables</key>
    <dict>
        <key>HOSTING_USER</key>
        <string>{{.UserName}}</string>
    </dict>
</dict>
</plist>
